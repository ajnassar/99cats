<% cat.errors.full_messages.each do |message| %>
  <%= message %>
<% end %>

<form action="<%= cat.persisted? ? cat_url(cat.id) : cats_url %>" method="POST">
  <% if cat.persisted? %>
    <input type="hidden" name="_method" value="PUT">
  <% end %>

  <label for="cat_name">Name</label>
  <input type="text" name="cat[name]" id = "cat_name" value = "<%= cat.name%>" > <br>

  <label for="cat_age" >Age</label>
  <input type="text" name="cat[age]" id = "cat_age" value = "<%= cat.age %>"> <br>


  <input <%= "checked" if cat.sex == "M" %> type="radio" name="cat[sex]" value="M">Male
  <input <%= "checked" if cat.sex == "F" %> type="radio" name="cat[sex]" value="F">Female <br>

  <select name="cat[color]" id="cat_color">
    <% Cat::COLORS.each do |color| %>
      <option <%= "selected" if cat.color == color %> value="<%= color %>"> <%= color %> </option>
    <% end %>
  </select> <br>

  <input type="date" name="cat[birth_date]" id="cat_date" value = "<%= cat.birth_date %>"> <br>

  <br>

  <input type="submit" value="submit_cat">
</form>